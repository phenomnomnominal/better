{
  "name": "@betterer/monorepo",
  "version": "0.0.0",
  "private": true,
  "author": "Craig Spence <craigspence0@gmail.com>",
  "license": "MIT",
  "description": "betterer makes it easier to make incremental improvements to your codebase",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "betterer": "node ./packages/cli/./bin/betterer",
    "build": "yarn clean && yarn && yarn compile && yarn lint && yarn test && yarn betterer",
    "clean": "rimraf reports && lerna exec \"rimraf dist\" && rimraf ./**/tsconfig.tsbuildinfo && lerna exec \"rimraf node_modules\" && rimraf node_modules",
    "compile": "tsc -b packages",
    "compile:watch": "tsc -b packages -w",
    "format:code": "eslint \"./packages/**/src/*.{js,ts}\" \"./test/**/*.{js,ts}\" \"./*.{js,ts}\" --fix",
    "format:files": "prettier \"**/!(*.snap)\" --write --loglevel=silent",
    "lint": "yarn format:code && yarn format:files",
    "test": "jest",
    "test:debug": "jest --runInBand",
    "prepublishOnly": "yarn run build"
  },
  "devDependencies": {
    "@betterer/cli": "*",
    "@betterer/logger": "*",
    "@betterer/regexp": "*",
    "@betterer/tsquery": "*",
    "@types/eslint": "^6.1.1",
    "@types/fs-extra": "^8.0.1",
    "@types/graceful-fs": "^4.1.3",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "fs-extra": "^8.1.0",
    "graceful-fs": "^4.2.3",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^10.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "strip-ansi": "^5.2.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  }
}
